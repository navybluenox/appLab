#!/bin/bash

folderPath=$1
sourceFolder=$2
option=$3

for name in ts gas
do
    inputFolder=${sourceFolder}"/"${name}
    outputFolder=${sourceFolder}"/"${name}"_compiled"

    echo "compile typescript files of folder@"${name}

    cd ~/${folderPath}/${outputFolder}
    rm -f *

    cd ~/${folderPath}/${inputFolder}
    tsc -p ./ ${option}
done

cd ~